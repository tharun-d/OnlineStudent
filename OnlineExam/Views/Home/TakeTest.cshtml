        function validation() {

            var cname = document.getElementById("one").value;
            var cat = document.getElementById("two").value;

            document.getElementById("val").style.visibility = "hidden"

            if (cname == "select" && cat == "select") {
                document.getElementById("val").innerText = "All fields are mandatory";
                document.getElementById("val").style.visibility = "visible"
                return false;
            }

            else if (cname == "select") {

                document.getElementById("val").innerText = "Please select course";
                document.getElementById("val").style.visibility = "visible"
                return false;
            }
            else if (cat == "select") {

                document.getElementById("val").innerText = "Please select category";
                document.getElementById("val").style.visibility = "visible"
                return false;
            }
        }
